<odoo>

    <record id="view_user_form" model="ir.ui.view">
        <field name="name">user.form</field>
        <field name="model">app.user</field>
        <field name="arch" type="xml">
            <form string="User">
                <header>
                    <button name="action_archive" string="Archive User?" type="object" invisible="not active"/>
                    <button name="action_active" string="Activate User?" type="object" invisible="active"/>
                    <button name="generate_token" string="Generate Token" type="object" class="oe_highlight" invisible="not active"/>
                    <button name="action_force_relogin" string="Force Relogin" type="object" class="oe_highlight" invisible="not active"/>
                </header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" invisible="active"/>
                    <group>
                        <field name="active" invisible="1" />
                        <field name="name"/>
                        <field name="email"/>
                        <field name="token_version" readonly="1"/>
                        <field name="role_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="allowed_company_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="default_company_id" options="{'no_open':True, 'no_create': True, 'no_create_edit': True}" />
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_user_tree" model="ir.ui.view">
        <field name="name">user.tree</field>
        <field name="model">app.user</field>
        <field name="arch" type="xml">
            <tree string="Users">
                <field name="active" optional="hide"/>
                <field name="name" optional="show"/>
                <field name="email" optional="show"/>
                <field name="role_ids" widget="many2many_tags" options="{'no_create': True}"/>
            </tree>
        </field>
    </record>

    <record id="view_user_search" model="ir.ui.view">
        <field name="name">user.search</field>
        <field name="model">app.user</field>
        <field name="arch" type="xml">
            <search string="Search Users">
                <field name="name"/>
                <field name="email"/>
                <field name="role_ids"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="All" name="all" domain="['|', ('active', '=', True), ('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_user" model="ir.actions.act_window">
        <field name="name">Users</field>
        <field name="res_model">app.user</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_user_tree"/>
    </record>
</odoo>
